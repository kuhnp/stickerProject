<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rrhg5930.stickerproject.SignInActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginRelativeLayout"
        android:orientation="horizontal"
        android:layout_marginTop="-30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/usernameET"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_alignParentLeft="true"
            android:editable="true"
            android:hint="USERNAME"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/login_edit_text"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/usernameIV"
            android:src="@drawable/profile"
            android:layout_marginTop="61dp"
            android:layout_marginLeft="6dp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:hint="PASSWORD"
            android:id="@+id/pwdET"
            android:editable="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="25dp"
            android:background="@drawable/login_edit_text"
            android:layout_below="@+id/usernameET"
            android:layout_marginTop="15dp"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/pwdIV"
            android:src="@drawable/lock"
            android:layout_marginTop="128dp"
            android:layout_alignParentLeft="true"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/pwdET"
            android:background="@drawable/login_send_button"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="login"
            android:textColor="#255254"
            android:id="@+id/loginB"/>

    </RelativeLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:id="@+id/signupB"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noAccountTextView"
        android:text="Don't have an account?"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/loginRelativeLayout"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clickableTextView"
        android:text="Sign Up"
        android:gravity="center"
        android:textColor="#FF150C64"
        android:textSize="25dp"
        android:layout_below="@+id/noAccountTextView"
        android:layout_marginTop="10dp"

        />


</RelativeLayout>
