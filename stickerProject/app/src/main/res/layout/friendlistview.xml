<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"

    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:background="@color/tab_color"
        android:layout_height="420dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/friendStickerNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Username"
                android:textColor="@color/text_grey"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/friendListIV"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/friendStickerNameTV"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/image_fun"/>

            <TextView
                android:id="@+id/stickerMessageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What a beautiful landscape!"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/friendListIV"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/text_grey"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stickerMessageTV"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/friendStickerNameFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="\@username"
                    android:textSize="20sp"
                    android:textColor="@color/text_grey_2"
                    />
                <Button
                    android:id="@+id/newPostB"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@id/friendStickerNameFrom"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/post"/>

                <Button
                    android:id="@+id/likeB"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@+id/friendStickerNameFrom"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/coeur"
                    />

                <TextView
                    android:id="@+id/timeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/friendStickerNameFrom"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="6 min"
                    android:textColor="@color/text_grey_2"
                    android:textSize="15sp"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/cancelB"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:background="@drawable/cancel_button"
                android:textColor="@color/white"
                android:text="Cancel"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/sendB"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_above="@+id/cancelB"
                android:layout_marginBottom="8dp"
                android:background="@drawable/send_button"
                android:textColor="@color/white"
                android:text="Send"
                android:textSize="20sp"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>






</RelativeLayout>