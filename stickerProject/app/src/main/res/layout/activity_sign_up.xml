<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rrhg5930.stickerproject.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpRelativeLayout"
        android:orientation="horizontal"
        android:layout_marginTop="-30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/emailET"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_edit_text"
            android:editable="true"
            android:hint="EMAIL"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:gravity="center"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/usernameETSignUp"
            android:gravity="center"
            android:layout_below="@+id/emailET"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:editable="true"
            android:hint="USERNAME"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/login_edit_text"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/usernameIV"
            android:src="@drawable/profile"
            android:layout_marginTop="128dp"
            android:layout_marginLeft="6dp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:hint="PASSWORD"
            android:id="@+id/pwdETSignUp"
            android:editable="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="25dp"
            android:background="@drawable/login_edit_text"
            android:layout_below="@+id/usernameETSignUp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/pwdIV"
            android:src="@drawable/lock"
            android:layout_marginTop="193dp"
            android:layout_alignParentLeft="true"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/pwdETSignUp"
            android:background="@drawable/login_send_button"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="Sign Up"
            android:textColor="#255254"
            android:id="@+id/signUpB"/>

    </RelativeLayout>


</RelativeLayout>
